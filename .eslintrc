{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"key-spacing": [
			"error",
			{
				"beforeColon": false,
				"afterColon": true
			}
		],
		"object-curly-spacing": ["error", "always"],
		"no-const-assign": "error",
		"prefer-const": "error",
		"no-unused-vars": ["off"],
		"no-async-promise-executor": ["off"],
		"comma-spacing": ["error", { "before": false, "after": true }]
	}
}
